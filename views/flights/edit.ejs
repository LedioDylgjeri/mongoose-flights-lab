<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/flights/edit.css">
<%- include('../partials/nav')  %> 

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="<%= flight.ailine %> "><%= flight.airline %> </option>
      <option value="Southwest">Southwest</option>
      <option value="Delta">Delta</option>
      <option value="United">United</option>
    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select"> 
      <option value="<%= flight.airport %> "><%= flight.airport %> </option>
      <option value="DEN">DEN</option>
      <option value="DFW">DFW</option>
      <option value="AUS">AUS</option>
      <option value="LEX">LEX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-no-input">Flight Number:</label>
    <input type="number" name="flightNo" min="10" max="9999" id="flight-no-input" value="<%= flight.number %> ">
    <label for="departure-input" value="flight.departs">Departure Date/Time:</label>
    <input type="datetime-local" name="departs"  id="departs-input">
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include('../partials/footer')  %> 